<Window 
	x:Class="ToDue2.MainWindow"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:local="clr-namespace:ToDue2"
	mc:Ignorable="d"
	Title="ToDue 2" 
	Height="633" 
	Width="440"
	Background="Transparent"
	StateChanged="Window_StateChanged" 
	Loaded="Window_Loaded"
	WindowStyle="None" 
	AllowsTransparency="True" 
	Left="10" 
	Top="10"
	Name="Window">
	<Window.Resources>
		<Style x:Key="Title" TargetType="TextBlock">
			<Style.Setters>
				<Setter Property="FontFamily" Value="./Resources/#Conservative Simplicity"/>
				<Setter Property="Foreground" Value="White"/>
				<Setter Property="HorizontalAlignment" Value="Left"/>
				<Setter Property="VerticalAlignment" Value="Top"/>
				<Setter Property="FontSize" Value="70"/>
			</Style.Setters>
		</Style>
		<Style x:Key="Body" TargetType="TextBlock">
			<Style.Setters>
				<Setter Property="FontFamily" Value="Segoe UI Light"/>
				<Setter Property="Foreground" Value="White"/>
				<Setter Property="FontSize" Value="20"/>
			</Style.Setters>
		</Style>
	</Window.Resources>
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="152"/>
			<RowDefinition/>
			<RowDefinition Height="58"/>
		</Grid.RowDefinitions>
		<Image 
			Source="/design.jpg" 
			Stretch="Uniform" 
			StretchDirection="UpOnly" 
			Height="633" 
			VerticalAlignment="Top" 
			Visibility="Hidden"
			Grid.RowSpan="3"/>
		<TextBlock 
			Style="{StaticResource Title}"
			Text="T" 
			Margin="36,52,0,0" 
			FontSize="90" 
			Grid.RowSpan="2" 
			Height="103" 
			Width="64"/>
		<TextBlock
			Style="{StaticResource Title}"
			Text="H" 
			Margin="99,70,0,0" 
			Height="80" 
			Width="57"/>
		<TextBlock 
			Style="{StaticResource Title}"
			Text="I" 
			Margin="170,70,0,0" 
			Height="80" 
			Width="21"/>
		<TextBlock 
			Style="{StaticResource Title}"
			Text="N" 
			Margin="205,70,0,0" 
			Height="80" 
			Width="59"/>
		<TextBlock 
			Style="{StaticResource Title}"
			Text="G" 
			Margin="280,70,0,0" 
			Height="80" 
			Width="55"/>
		<TextBlock 
			Style="{StaticResource Title}"
			Text="S" 
			Margin="349,70,0,0" 
			Height="80" 
			Width="49"/>
		<ScrollViewer 
			VerticalScrollBarVisibility="Hidden" 
			Grid.Row="1">
			<!--<StackPanel>
				<Grid 
					Margin="30, 5, 48, 5" 
					HorizontalAlignment="Stretch">
					<Button 
						Width="16" 
						Height="16" 
						HorizontalAlignment="Left" 
						VerticalAlignment="Center" 
						Background="Transparent" 
						BorderBrush="Transparent">
						<TextBlock 
							FontFamily="./Resources/#Segoe MDL2 Assets" 
							Text="" 
							FontSize="10" 
							Foreground="White"/>
					</Button>
					<TextBox 
						Margin="24,0,0,0" 
						Background="Transparent" 
						BorderBrush="Transparent" 
						BorderThickness="0, 0, 0, 1"
						Text="CMSC434"
						Foreground="White"
						FontSize="20"
						FontFamily="Segoe UI Light"
						TextWrapping="Wrap"
						MaxLines="2"/>
					<DatePickerTextBox 
						HorizontalAlignment="Right" 
						FontSize="20" 
						Foreground="White" 
						Background="Transparent" 
						BorderBrush="Transparent" 
						BorderThickness="0, 0, 0, 1" 
						FontFamily="Segoe UI Light" 
						Text="{Binding ElementName=Window, Path=DateOfNow, Mode=OneTime}"
						TextAlignment="Right" 
						Width="53"/>
				</Grid>
			</StackPanel>-->
			<ItemsControl ItemsSource="{Binding ElementName=Window, Path=TodoItems}">
				<ItemsControl.ItemTemplate>
					<DataTemplate>
						<Grid 
							Margin="30, 5, 48, 5" 
							HorizontalAlignment="Stretch">
							<Button 
								Width="16" 
								Height="16" 
								HorizontalAlignment="Left" 
								VerticalAlignment="Center" 
								Background="Transparent" 
								BorderBrush="Transparent"
								Command="{Binding ElementName=Window, Path=RemoveItem}" CommandParameter="{Binding}">
								<TextBlock 
									FontFamily="./Resources/#Segoe MDL2 Assets" 
									Text="&#xE106;" 
									FontSize="10" 
									Foreground="White"/>
							</Button>
							<TextBox 
								Margin="24,0,0,0" 
								Background="Transparent" 
								BorderBrush="Transparent" 
								BorderThickness="0, 0, 0, 1"
								Foreground="White"
								FontSize="20"
								FontFamily="Segoe UI Light"
								TextWrapping="Wrap"
								MaxLines="2"
								Text="{Binding Path=Content, Mode=TwoWay}"/>
							<DatePickerTextBox 
								HorizontalAlignment="Right" 
								FontSize="20" 
								Foreground="White" 
								Background="Transparent" 
								BorderBrush="Transparent" 
								BorderThickness="0, 0, 0, 1" 
								FontFamily="Segoe UI Light"
								Text="{Binding Path=DueDate, Mode=TwoWay}"
								TextAlignment="Right" 
								Width="53"/>
						</Grid>
					</DataTemplate>
				</ItemsControl.ItemTemplate>
			</ItemsControl>
		</ScrollViewer>
		<Grid Grid.Row="2">
			<Line Y2="50" X2="50" Stroke="White"/>
			<Button 
				BorderBrush="{x:Null}" 
				Background="Transparent"
				Margin="0,0,0,0">
			</Button>
		</Grid>
	</Grid>
</Window>
